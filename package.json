{
  "name": "cheers-receiver",
  "version": "1.0.0",
  "description": "Simple HTTP Node.js server that counts amount of cheers given.",
  "main": "src/server.js",
  "files": [
    "src"
  ],
  "scripts": {
    "start": "node src/main.js",
    "test": "ava test/*.js",
    "test:watch": "npm run test -- --watch",
    "test:ci": "npm run test -- --fail-fast && npm run lint -- --list-different",
    "dev": "nodemon --inspect src/main.js",
    "lint": "prettier --write --single-quote --trailing-comma all {src,test}/*/*.js"
  },
  "dependencies": {
    "got": "^8.0.0",
    "level": "^3.0.0",
    "memdown": "^2.0.0",
    "micro": "^9.0.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "nock": "^9.0.14",
    "nodemon": "^1.11.0",
    "prettier": "^1.6.1"
  },
  "repository": {
    "url": "https://github.com/Siilwyn/cheers-receiver.git",
    "type": "git"
  },
  "author": "Selwyn <talk@selwyn.cc> (https://selwyn.cc/)",
  "license": "MPL-2.0"
}
