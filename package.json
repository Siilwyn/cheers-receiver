{
  "name": "cheers-receiver",
  "version": "1.0.0",
  "description": "Simple HTTP Node.js server that counts amount of cheers given.",
  "main": "src/server.js",
  "files": [
    "src"
  ],
  "scripts": {
    "start": "node src/main.js",
    "dev": "nodemon --inspect src/main.js",
    "test": "NODE_ENV=test ava test/*.js",
    "test:ci": "npm run test && npm run lint",
    "test:watch": "npm run test -- --watch",
    "lint": "npm run prettier -- --check",
    "format": "npm run prettier -- --write",
    "prettier": "prettier '{src,test}/**/*.js'"
  },
  "dependencies": {
    "got": "^10.6.0",
    "leveldown": "^5.5.1",
    "levelup": "^4.3.2",
    "micro": "^9.3.0"
  },
  "devDependencies": {
    "ava": "^3.5.0",
    "memdown": "^5.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2"
  },
  "engines": {
    "node": ">= 10"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "repository": {
    "url": "https://github.com/Siilwyn/cheers-receiver.git",
    "type": "git"
  },
  "author": "Selwyn <talk@selwyn.cc> (https://selwyn.cc/)",
  "license": "MPL-2.0"
}
